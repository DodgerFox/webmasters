.input
  position relative
  margin-top 25px
  max-width 520px
  width 100%

  input
    border 1px solid #e5e5e5
    height 60px
    width 100%
    border-radius 5px
    font-size 20px
    font-weight 400
    text-align center
    color #1c1c1c
    padding-top 10px
    t()
    +placeholder()
      color #c8c8c8

    + label
        position absolute
        left 0
        right 0
        top 19px
        right 0
        font-size 24px
        text-align center
        pointer-events none
        color #c8c8c8
        t()
        +to-width(520px)
          font-size 18px
          top 21px

    &:focus
      border 1px solid #435993
      + label
        top 7px
        font-size 14px

    &.active
      + label
        top 7px
        font-size 14px
