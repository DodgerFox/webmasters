.checkbox
  margin-top 15px
  width 33.333%
  +to-width(768px)
    width 50%
  +to-width(420px)
    width 100%
  label
    font-size 16px
    color #000000
    font-family Roboto
    font-size 16px
    font-weight 300
    line-height 20px
    cursor pointer

  input
    position absolute
    opacity 0

    & + label:before
      content ''
      margin-right 10px
      display inline-block
      vertical-align text-top
      width 20px
      height 20px
      border-radius 2px
      box-sizing border-box
      background-color #435993
      background-position center
      background-repeat no-repeat
      t()


    &:hover + label:before
      border 1px solid #435993
      background-color #e9efff

    // Box focus
    &:focus + label:before
      background-color #e9efff

    // Box checked
    &:checked + label:before
      background-color #435993
      background-image url('../images/check_icon.svg')

    // Disabled state label.
    &:disabled + label
      color #b8b8b8
      cursor auto

    // Disabled box.
    &:disabled + label:before
      box-shadow none
      background #ddd


    // Checkmark. Could be replaced with an image
    &:checked + label:after
      content: ''
      position: absolute
      left: 5px
      top: 9px
      background: white
      width 2px
      height 2px
      transform rotate(45deg)
